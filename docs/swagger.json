              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "BadRequestError"
                },
                "details": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
