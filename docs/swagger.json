                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Water consumption data for requested month retrieved successfully"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "data"
                      ],
